<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path) do |f|%>
	<div clas="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %><br />
	</div>
	<div clas="field">
		<%= f.label :password %><br />
		<%= f.password_field :password %><br />
	</div>
	<div class="actions">
		<%= f.submit "Sign in"%>
	</div>
<% end %>

<p> New User? <%= link_to "sign up now!", signup_path%></p>